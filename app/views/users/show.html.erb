<div class="container-fluid">

<p id="notice"><%= notice %></p>

<h1>Listing Albums of a User</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Albums' Thumbnail</th>
    </tr>
  </thead>

  <tbody>
    <% @user.albums.each do |album| %>
      <tr>
        <td><%= link_to( image_tag(album.photos.first.thumbnail_url), user_album_photos_path(@user, album) ) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back', users_path %>

</div>