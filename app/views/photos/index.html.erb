<div class="container-fluid">

<p id="notice"><%= notice %></p>

<h1>Listing Photos of an Album</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Photo's Thumbnail</th>
    </tr>
  </thead>

  <tbody>
    <% @photos.each do |photo| %>
      <tr>
        <td><%= link_to( image_tag(photo.thumbnail_url), user_album_photo_path(@user, @album, photo) ) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Photo', new_photo_path %>

</div>
