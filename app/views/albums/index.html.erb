<p id="notice"><%= notice %></p>

<h1>Listing Photos in Album</h1>

<table>
  <thead>
    <tr>
      <th>Photos</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= link_to( image_tag(album.photos.first.thumbnail_url), user_album_photos_path(@user, album) ) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Album', new_user_album_path %>
